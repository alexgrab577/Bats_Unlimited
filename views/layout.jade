doctype html
html
  head
    title= title
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(rel='stylesheet', href='/static/style.css')
    link(rel='stylesheet', href='http://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css')
    script(src='//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js')
    script(src='//maxcdn.bootstrapcdn.com/bootstrap/3.3.1/js/bootstrap.min.js')
    block scripts

    
  body
   div#header
    a(href="/")
     img.img-responsive.center-block(src="https://mycustomblob.blob.core.windows.net/testblobcontainerstorage/site_logo")
     
   nav.navbar.navbar-default.globalHeader
    div.container
     div.navbar-header
      button.navbar-toggle(type="button" data-toggle="collapse" data-target="#responsiveNavbar")
       span.icon-bar
       span.icon-bar
       span.icon-bar
      a.navbar-brand(href="/") Bats Unlimited
     div.collapse.navbar-collapse(id="responsiveNavbar")
      ul.nav.navbar-nav
         li(class=title=='About'?'active':undefined)
            a(href="/About") About
         li(class=title=='Product'?'active':undefined)
            a(href="/Product") Product
         li(class=title=='Input'?'active':undefined)
            a(href="/Input") Input
   block content